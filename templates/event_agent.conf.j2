# {{ ansible_managed }}
[event-agent]
namespace = {{ openio_event_agent_namespace }}
user = openio
tube = {{ openio_event_agent_tube }}
queue_url = {{ openio_event_agent_queue_url }}
{% if (openio_event_agent_workers | int) > 0 %}
workers = {{ openio_event_agent_workers | int }}
{% endif %}
{% if openio_event_agent_concurrency %}
concurrency = {{ openio_event_agent_concurrency | int }}
{% endif %}
handlers_conf = /etc/oio/sds/{{ openio_event_agent_namespace }}/{{ openio_event_agent_servicename }}/oio-event-handlers.conf
log_facility = LOG_LOCAL0
log_level = info
log_name = {{ openio_event_agent_servicename }}
log_address = /dev/log
syslog_prefix = OIO,{{ openio_event_agent_namespace }},oio-event-agent,{{ openio_event_agent_serviceid }}
